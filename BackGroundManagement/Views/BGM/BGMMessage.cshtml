@{
    Layout = null;
}
   

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="renderer" content="webkit" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1"/>
        <link rel="stylesheet" href="/css/layuimini.css" media="all" />
        <link rel="stylesheet" href="/css/public.css" media="all" />
        <link href="/css/layui.css" rel="stylesheet" />
        <title>后台管理系统 - 观己设计</title>
    </head>
    <body>
        <div class="layuimini-container">
            <div class="layuimini-main">
                <fieldset class="table-search-fieldset">
                    <legend>搜索信息</legend>
                        <div style="margin:10px 10px 10px 10px" action="">
                            <div class="SearDiv">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <label class="layui-form-label">姓名</label>
                                        <div class="layui-input-inline">
                                            <input class="layui-input" name="name" id="SearParameter" autocomplete="off">
                                        </div>
                                    </div>
                                

                                    <div class="layui-inline">
                                        <label class="layui-form-label">部门</label>
                                        <div class="layui-input-inline">
                                        <select id="DepartmentSelect" class="layui-input" lay-filter="select-Message"></select>
                                        </div>
                                    </div>

                                    <button class="layui-btn" data-type="reload" type="button" lay-filter="Search">
                                        <i class="layui-icon layui-icon-search">搜索</i>
                                    </button>
                                </div>
                                
                            </div>
                        </div>
                </fieldset>

                <div class="site-text" style="margin:5%;display:none" id="AddFormDiv">

                    <form class="layui-form" id="AddForm" method="post" lay-filter="example">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">编号</label>
                                <div class="layui-input-block">
                                    <input type="text" name="Number" id="Number" lay-verify="required" autocomplete="off" placeholder="请输入编号" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">姓名</label>
                                <div class="layui-input-block">
                                    <input type="text" name="Name" id="Name" lay-verify="required" autocomplete="off" placeholder="请输入姓名" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">部门</label>
                                <div class="layui-input-block">
                                    <input type="text" name="Department" id="Department" lay-verify="required" autocomplete="off" placeholder="请输入部门" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">二级部门</label>
                                <div class="layui-input-block">
                                    <input type="text" name="SecDepartment" id="SecDepartment" autocomplete="off" placeholder="请输入二级部门" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">等级</label>
                                <div class="layui-input-block">
                                    <input type="text" name="Level" id="Level" autocomplete="off" placeholder="请输入配置等级" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">状态</label>
                                <div class="layui-input-block">
                                    <div class="layui-input-block" id="Status">
                                        <input type="radio" name="Status" value="1" title="在用" lay-filter="StatusRadio" checked>
                                        <input type="radio" name="Status" value="0" title="空闲" lay-filter="StatusRadio">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">配置</label>
                                <div class="layui-input-block">
                                    <input type="text" name="Config" id="Config" autocomplete="off" placeholder="请输入电脑配置" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">备注</label>
                                <div class="layui-input-block">
                                    <input type="text" name="Memo" id="Memo" autocomplete="off" placeholder="请输入备注" class="layui-input">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!--新建表格部分-->
                <script type="text/html" id="toolbarDemo">
                    <div class="layui-btn-container">
                        <button id="btn-add" class="layui-btn" lay-event="add">新建</button>
                    </div>    
                </script>

                <!--表格部分，在下方table.render部分进行表格操作-->
                <table class="layui-hide" id="computerTable" lay-filter="currentTableFilter"></table>

                <script type="text/html" id="currentTableBar">
                    <button class="layui-btn layui-btn-sm layui-btn-normal" lay-event="edit">编辑</button>
                    <button class="layui-btn layui-btn-sm layui-btn-normal" lay-event="delete">删除</button>
                </script>
            </div>
        </div>

        <!--引入相关js文件-->
        <script src="/js/layui.js" charset="utf-8"></script>
        <script src="/js/lay-config.js" charset="utf-8"></script>
        <script type="text/javascript">
        layui.use(['upload', 'form', 'layer', 'table', 'jquery'], function () {
                var upload = layui.upload,
                    form = layui.form,
                    layer = layui.layer,
                    table = layui.table,
                    $ = layui.jquery;

                table.render({
                    elem: '#computerTable',
                    id: 'ComputerTable',
                    method: 'post',
                    url: '../BGM/ComputerMessage',
                    toolbar: '#toolbarDemo',
                    defaultToolbar: ['exports', 'print'],
                    cols: [[
                        { field: 'number', width: 80, title: '', sort: true },
                        { field: 'name', width: 100, title: '姓名' },
                        { field: 'department', width: 120, title: '一级部门' },
                        { field: 'secDepartment', width: 120, title: '二级部门' },
                        { field: 'level', width: 120, title: '等级' },
                        { field: 'status', width: 80, title: '状态' },
                        { field: 'config', width: 240, title: '配置' },
                        { field: 'memo', width: 120, title: '备注' },
                        { title: '操作', minwidth: 210, toolbar: '#currentTableBar', align: 'center' }
                    ]],

                    limits: [5, 10, 15, 20, 25, 50],//页数
                    limit: 20,
                    page: true,//分页设置
                    skin: 'line,row',
                    id: 'TableId',
                    parseData: function (res) {//获取后端所传回的数据进行分页处理

                        if (this.page.curr) {
                            result = res.data.slice(this.limit * (this.page.curr - 1), this.limit * this.page.curr);
                        }
                        else {
                            result = res.data.slice(0, this.limit);
                        }
                        return { "code": res.code, "msg": res.msg, "count": res.count, "data": result };
                    }

                });


                table.on('tool(currentTableFilter)', function (obj) {
                    var data = obj.data;
                    console.log(data); 
                    if (obj.event === 'edit') {
                        var editlay = layer.open({
                            type:1,
                            skin:'layui-layer-molv',
                            area:['700px','600px'],
                            title:'编辑信息',
                            btn:['确定','取消'],
                            shadeClose:true,
                            shade:0,
                            content:$('#AddFormDiv'),
                            success:function(layero,index){
                                $('#Number').val(data.number);
                                $('#Name').val(data.name);
                                $('#Department').val(data.department);
                                $('#SecDepartment').val(data.secDepartment);
                                $('#Level').val(data.level);
                                $('#Status').val(data.status);
                                $('#Config').val(data.config);
                                $('#Memo').val(data.memo);
                                layero.addClass('layui-form');
                                layero.find('.layui-layer-btn0').attr({
                                    'lay-filter':'formButton',
                                    'lay-submit':''
                                })
                            },yes:function(){
                                form.on('submit(formButton)',function(){
                                    var com = {};
                                    var Number = $('#Number').val();
                                    var Name = $('#Name').val();
                                    var Department = $('#Department').val();
                                    var SecDepartment = $('#SecDepartment').val();
                                    var Level = $('#Level').val();
                                    var Status = $('#Status').val();
                                    var Config = $('#Config').val();
                                    var Memo = $('#Memo').val();

                                    com.Number = Number;
                                    com.Name = Name;
                                    com.Department = Department;
                                    com.SecDepartment = SecDepartment;
                                    com.Level = Level;
                                    com.Status = Status;
                                    com.Config = Config;
                                    com.Memo = Memo;
                                    $.ajax({
                                        url:'BGM/Edit',
                                        data:{
                                            param:JSON.stringify(com)
                                        },
                                        type:'post',
                                        success:function(res){
                                            if(res.code === 0){
                                                layer.close(editlay);
                                                layer.alert(res.msg);
                                                table.reloadData('ComputerTable');
                                            }else{
                                                layer.alert(res.msg);
                                            }
                                        }
                                    })
                                })
                            }
                        });
                    }else if (obj.event === 'delete'){
                        var mm2 = '真的删除该条数据吗？';
                        layer.confirm(mm2,function(index){
                            $.ajax({
                                url:'BGM/Delete',
                                data:{
                                    Number : data.number
                                },
                                type:'post',
                                success:function(res){
                                    if(res.code === 0 ){
                                        layer.close(index);
                                        table.reload('computerTable')
                                    }
                                    else{
                                        layer.close(index);
                                        layer.msg(res.msg,{icon:5});
                                    }
                                }
                            });
                        });
                    }
                });

                $('#btn-add').on('click',function(){
                    var addlay = layer.open({
                        type:1,
                        skin:'layui-layer-molv',
                        area:['700px','600px'],
                        title:'添加数据',
                        btn:['确定','取消'],
                        shadeClose:true,
                        shade:0,
                        content:$('#AddFormDiv'),
                        success: function (layero, index) {
                            
                            layero.addClass('layui-form');
                            layero.find('.layui-layer-btn0').attr({
                                'lay-filter': 'formButton',
                                'lay-submit': ''
                            })
                        }, yes: function () {
                            form.on('submit(formButton)', function () {
                                var com = {};
                                var Number = $('#Number').val();
                                var Name = $('#Name').val();
                                var Department = $('#Department').val();
                                var SecDepartment = $('#SecDepartment').val();
                                var Level = $('#Level').val();
                                var Status = $('#Status').val();
                                var Config = $('#Config').val();
                                var Memo = $('#Memo').val();

                                com.Number = Number;
                                com.Name = Name;
                                com.Department = Department;
                                com.SecDepartment = SecDepartment;
                                com.Level = Level;
                                com.Status = Status;
                                com.Config = Config;
                                com.Memo = Memo;
                                $.ajax({
                                    url: 'BGM/Add',
                                    data: {
                                        param: JSON.stringify(com)
                                    },
                                    type: 'post',
                                    success: function (res) {
                                        if (res.code === 0) {
                                            layer.close(addlay);
                                            layer.alert(res.msg);
                                            table.reload('computerTable');
                                        } else {
                                            layer.alert(res.msg);
                                        }
                                    }
                                })
                            })
                        },
                        btn2:function(){
                            $('#btn-add')[0].reset();
                        }
                    });
                })
            });
        </script>
    </body>
</html>